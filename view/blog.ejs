<%- include("partials/header.ejs") %>
<div class="blog-container styled-blog">
  <div class="blog-header">
    <h1 class="blog-title"><%= data.heading %></h1>
    <div class="blog-meta">By <span class="blog-author">rudra</span> | <span class="blog-date"><%= new Date().toLocaleDateString() %></span></div>
    <h3 class="blog-intro"><%= data.introduction %></h3>
  </div>
  <div class="blog-content">
    <p><%= data.contents %></p>
  </div>
  <div class="blog-footer">
    <h3 class="blog-conclusion">Conclusion</h3>
    <p><%= data.conclusion %></p>
  </div>
</div>
<%- include("partials/footer.ejs") %>